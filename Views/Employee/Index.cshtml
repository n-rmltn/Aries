@{
    ViewData["Title"] = "Employee";
}

@model IEnumerable<EmployeeViewModel>

<div class="card">
    <h5 class="card-header d-flex justify-content-between align-items-center">
        Employees List
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New Employee
        </a>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-5">Employee</th>
                    <th class="col-4">Department</th>
                    <th class="col-1">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span>@item.Name</span></td>
                        <td>
                            <span class="badge rounded-pill bg-label-primary">@item.DepartmentName</span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <button class="dropdown-item text-danger"
                                        onclick="showDeleteModal(@item.Id, '@item.Name')">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete employee "<span id="employeeName"></span>"?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="employeeId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(id, name) {
            document.getElementById('employeeId').value = id;
            document.getElementById('employeeName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}