@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="d-flex justify-content-center">
    <div class="col-md-4">
        <div class="card p-7">
            <div class="card-body mt-1">
                <h4 class="mb-3">Welcome back! ðŸ‘‹</h4>
                <p class="mb-3">Please sign-in to your account</p>
                <p class="">
                    <span>New user?</span>
                    <a asp-action="Signup">Create an account</a>
                </p>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating form-floating-outline mb-2">
                        <input asp-for="Email" class="form-control" autocomplete="username" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-password-toggle mb-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="Password" class="form-control" autocomplete="current-password" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary d-grid w-100">Login</button>
                </form>

            </div>
        </div>
    </div>
</section>