@model SignupViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<section class="d-flex justify-content-center">
    <div class="col-md-4">
        <div class="card p-7">
            <div class="card-body mt-1">
                <h4 class="mb-3">Adventure starts here ðŸš€</h4>
                <p class="">Create your account to get started</p>
                <p class="mb-3">
                    <span>Already have an account?</span>
                    <a asp-action="Login">Login</a>
                </p>

                <form asp-action="Signup" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating form-floating-outline mb-2">
                        <input asp-for="Email" class="form-control" autocomplete="email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-password-toggle mb-2">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="Password" class="form-control" autocomplete="new-password" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-password-toggle mb-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary d-grid w-100 mb-4">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</section>