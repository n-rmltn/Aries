@{
    ViewData["Title"] = "Department";
}

@model IEnumerable<DepartmentViewModel>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["Success"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    @TempData["Error"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
}

<div class="card">
    <h5 class="card-header d-flex justify-content-between align-items-center">
        Departments List
        <div>
            <button id="bulkDeleteBtn" class="btn btn-danger me-2" style="display:none">
                <i class="bi bi-trash"></i> Delete Selected
            </button>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add New Department
            </a>
        </div>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-1">
                        <input type="checkbox" class="form-check-input" id="selectAll">
                    </th>
                    <th class="col-5">Department</th>
                    <th class="col-4">Employee Count</th>
                    <th class="col-1">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="form-check-input department-checkbox" 
                                   value="@item.Id" data-has-employees="@(item.EmployeeCount > 0)">
                        </td>
                        <td>
                            <span>@item.Name</span>
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-label-info">@item.EmployeeCount</span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <button class="dropdown-item text-danger"
                                        onclick="showDeleteModal(@item.Id, '@item.Name')">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete department "<span id="departmentName"></span>"?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="departmentId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<form asp-action="BulkDelete" method="post" id="bulkDeleteForm">
    <input type="hidden" name="ids" id="selectedIds" />
    
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Bulk Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <span id="selectedCount"></span> departments?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function showDeleteModal(id, name) {
            document.getElementById('departmentId').value = id;
            document.getElementById('departmentName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.addEventListener('DOMContentLoaded', function() {
            const selectAll = document.getElementById('selectAll');
            const departmentCheckboxes = document.querySelectorAll('.department-checkbox');
            const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');

            function updateBulkDeleteButton() {
                const checkedBoxes = document.querySelectorAll('.department-checkbox:checked');
                bulkDeleteBtn.style.display = checkedBoxes.length > 0 ? 'inline-block' : 'none';
            }

            selectAll.addEventListener('change', function() {
                const canDeleteCheckboxes = Array.from(departmentCheckboxes).filter(checkbox => {
                    return !(checkbox.dataset.hasEmployees === "True" || checkbox.disabled);
                });

                canDeleteCheckboxes.forEach(checkbox => {
                    checkbox.checked = selectAll.checked;
                });
                
                selectAll.indeterminate = false;
                if (canDeleteCheckboxes.length > 0) {
                    const allChecked = canDeleteCheckboxes.every(cb => cb.checked);
                    const someChecked = canDeleteCheckboxes.some(cb => cb.checked);
                    selectAll.checked = allChecked;
                    selectAll.indeterminate = someChecked && !allChecked;
                }

                updateBulkDeleteButton();
            });

            departmentCheckboxes.forEach(checkbox => {
                if (checkbox.dataset.hasEmployees === "True") {
                    checkbox.disabled = true;
                    checkbox.title = "Cannot delete department with employees";
                }
                
                checkbox.addEventListener('change', function() {
                    const canDeleteCheckboxes = Array.from(departmentCheckboxes).filter(cb => !cb.disabled);
                    const allChecked = canDeleteCheckboxes.every(cb => cb.checked);
                    const someChecked = canDeleteCheckboxes.some(cb => cb.checked);
                    
                    selectAll.checked = allChecked;
                    selectAll.indeterminate = someChecked && !allChecked;
                    updateBulkDeleteButton();
                });
            });

            bulkDeleteBtn.addEventListener('click', function() {
                const selectedIds = Array.from(document.querySelectorAll('.department-checkbox:checked'))
                    .map(cb => cb.value);
                document.getElementById('selectedIds').value = selectedIds.join(',');
                document.getElementById('selectedCount').textContent = selectedIds.length;
                new bootstrap.Modal(document.getElementById('bulkDeleteModal')).show();
            });
        });
    </script>
}