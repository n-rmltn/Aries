<header class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <button id="sidebar-toggle" class="sidebar-toggle me-3">
            <i class="bi bi-list"></i>
        </button>
        <!-- Left side - Search -->
        <form class="d-flex me-auto">
            <div class="input-group">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>

        <!-- Right side - Login button -->
        <div class="ms-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person"></i> @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/Account/Manage">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form class="dropdown-item" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link p-0">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-primary">
                    <i class="bi bi-person"></i> Login
                </a>
            }
        </div>
    </div>
</header>
</div>